= form_tag translations_path do
  %p
    = label_tag :locale
    %br/
    = select_tag :locale, "<option>en</option><option>de</option>".html_safe
  %p
    = label_tag :key
    %br/
    = text_field_tag :key
  %p
    = label_tag :value
    %br/
    = text_field_tag :value
  %p= submit_tag "Submit", :class => 'nice small radius white button'
